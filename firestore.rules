rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Game state collection and subcollections
    match /game_state/{document=**} {
      allow read, write: if true;
    }
    
    // Test collection
    match /test_collection/{document=**} {
      allow read, write: if true;
    }
    
    // Default rule - restrict access unless explicitly allowed above
    match /{document=**} {
      allow read, write: if request.time < timestamp.date(2025, 10, 3);
    }
  }
}
